# Gemini API Key (from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key

# Crawler database settings (bo_crawler_v1 schema)
CRAWLER_DB_ADDR=localhost:5432
CRAWLER_DB_USER=postgres
CRAWLER_DB_PASS=your_password
CRAWLER_DB_SCHEMA=bo_crawler_v1

# Case database settings (bo_v1 schema)
CASE_DB_ADDR=localhost:5432
CASE_DB_USER=postgres
CASE_DB_PASS=your_password
CASE_DB_SCHEMA=bo_v1

# NATS settings
NATS__URL=nats://localhost:4222
NATS__NUM_OF_SUMMARIZER_CONSUMER_INSTANCES=3

# Service settings
PORT=8004

# Optional: Google Cloud Storage settings
# Base64-encoded service account JSON (for GCS access)
# Generate with: cat service-account.json | base64 -w 0
GCP_PROJECT_ID=
GCP_CREDENTIALS_BASE64=
